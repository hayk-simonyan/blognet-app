<%- include ../includes/header %>

<div class="my-md-4">
    <h1 class="text-primary my-md-3">Edit Article</h1>
    <form action="/articles/<%= article._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="inputTitle">Article Title</label>
            <input type="text" name="title" class="form-control" id="inputTitle" aria-describedby="emailHelp" value="<%= article.title %>" required>
        </div>
        <div class="form-group">
            <label for="inputImage">Article Image</label>
            <input type="text" name="image" class="form-control" id="inputImage" aria-describedby="emailHelp" value="<%= article.image %>" required>
        </div>
        <div class="form-group">
            <label for="inputContent">Article Content</label>
            <textarea class="form-control" name="content" id="inputContent" rows="30" required><%= article.content %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
        <a href="/articles" class="float-right">Go Back</a>
    </form>
</div>

<%- include ../includes/footer %>