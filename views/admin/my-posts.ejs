<%- include ../includes/header %>

<div class="m-md-4">
    <div class="row">
        <% adminArticles.forEach(article => { %>
            <div class="col-12 col-md-6 col-lg-4 d-flex align-items-stretch pt-3 pt-md-0">
                <div class="card mt-md-3">
                    <img class="card-img-top" src="<%= article.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= article.title %></h5>
                        <p class="card-text"><%- article.content.substring(0, 100) %>...</p>
                    </div>
                    <div class="d-flex justify-content-between card-footer">
                        <small class="text-muted my-auto">
                            Published - 
                            <%= article.created.getMonth() + 1 %>/<%= article.created.getDate() %>/<%= article.created.getYear() + 1900 %>
                        </small>
                        <a  class="btn btn btn-warning" 
                            href="/articles/<%= article._id %>/edit">
                            Edit
                        </a>
                        <form id="delete-form" action="/articles/<%= article._id %>?_method=DELETE" method="POST">
                            <button class="btn btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ../includes/footer %>