<%- include ../includes/header %>

<div class="my-md-4">
    <h1 class="text-primary my-md-3">Add new Article</h1>
    <form action="/articles" method="POST">
        <div class="form-group">
            <label for="inputTitle">Article Title</label>
            <input type="text" name="title" class="form-control" id="inputTitle" aria-describedby="emailHelp" placeholder="Your Post Title" required>
        </div>
        <div class="form-group">
            <label for="inputImage">Article Image</label>
            <input type="text" name="image" class="form-control" id="inputImage" aria-describedby="emailHelp" placeholder="Your Post Image Url" required>
        </div>
        <div class="form-group">
            <label for="inputContent">Article Content</label>
            <textarea class="form-control" name="content" id="inputContent" rows="30" placeholder="Your Post Content" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
</div>

<%- include ../includes/footer %>