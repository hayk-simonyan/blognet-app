<%- include ../includes/header %>

<div class="m-md-4">
  <div class="col-126 d-flex align-items-stretch pt-3 pt-md-0">
    <div class="card mt-md-3 w-100">
      <img
        class="card-img-top"
        src="<%= allArticles[allArticles.length-1].image %>"
        class="card-img-top"
        alt="..."
      />
      <div class="card-body">
        <h5 class="card-title">
          <%= allArticles[allArticles.length-1].title %>
        </h5>
        <p class="card-text">
          <%- allArticles[allArticles.length-1].content.substring(0, 100) %>...
        </p>
      </div>
      <div class="d-flex justify-content-between card-footer">
        <small class="text-muted my-auto">
          Published - <%= allArticles[allArticles.length-1].created.getMonth() +
          1 %>/<%= allArticles[allArticles.length-1].created.getDate() %>/<%=
          allArticles[allArticles.length-1].created.getYear() + 1900 %>
        </small>
        <a
          class="btn btn-dark"
          href="/allArticles[allArticles.length-1]s/<%= allArticles[allArticles.length-1]._id %>"
          >Read More</a
        >
      </div>
    </div>
  </div>
  <div class="row">
    <% allArticles.forEach(article => { %>
    <div
      class="col-12 col-md-6 col-lg-4 d-flex align-items-stretch pt-3 pt-md-0"
    >
      <div class="card mt-md-3">
        <img
          class="card-img-top"
          src="<%= article.image %>"
          class="card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%- article.content.substring(0, 100) %>...</p>
        </div>
        <div class="d-flex justify-content-between card-footer">
          <small class="text-muted my-auto">
            Published - <%= article.created.getMonth() + 1 %>/<%=
            article.created.getDate() %>/<%= article.created.getYear() + 1900 %>
          </small>
          <a class="btn btn-dark" href="/articles/<%= article._id %>"
            >Read More</a
          >
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <%- include('../includes/pagination.ejs', {currentPage: currentPage, nextPage:
  nextPage, previousPage: previousPage, lastPage: lastPage, hasNextPage:
  hasNextPage, hasPreviousPage: hasPreviousPage}) %>
</div>

<%- include ../includes/footer %>
