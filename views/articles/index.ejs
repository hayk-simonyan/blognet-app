<%- include ../includes/header %>

<div class="m-md-4">
    <div class="card" style="max-width: 1200px;">
        <div class="row no-gutters">
            <div class="col-md-6">
                <img class="card-img h-100" src="<%= allArticles[0].image %>" alt="...">
            </div>
            <div class="col-md-6 align-self-center">
                <div class="card-body">
                    <h5 class="card-title"><%= allArticles[0].title %></h5>
                    <p class="card-text"><%= allArticles[0].content.substring(0, 300) %>...</p>
                    <div class="d-flex justify-content-between card-footer">
                        <small class="text-muted my-auto">
                            Published - 
                            <%= allArticles[0].created.getMonth() + 1 %>/<%= allArticles[0].created.getDate() %>/<%= allArticles[0].created.getYear() + 1900 %>
                        </small>
                        <a class="btn btn-primary" href="#">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <% allArticles.forEach(article => { %>
            <div class="col-12 col-md-6 col-lg-4 d-flex align-items-stretch pt-3 pt-md-0">
                <div class="card mt-md-3">
                    <img class="card-img-top" src="<%= article.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= article.title %></h5>
                        <p class="card-text"><%- article.content.substring(0, 100) %>...</p>
                    </div>
                    <div class="d-flex justify-content-between card-footer">
                        <small class="text-muted my-auto">
                            Published - 
                            <%= article.created.getMonth() + 1 %>/<%= article.created.getDate() %>/<%= article.created.getYear() + 1900 %>
                        </small>
                        <a class="btn btn-primary" href="/articles/<%= article._id %>">Read More</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ../includes/footer %>