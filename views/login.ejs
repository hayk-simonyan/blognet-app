<%- include ./includes/header %>

<div class="m-3 m-md-5">
  <form action="/login" method="POST" novalidate>
    <div class="m-md-3">
      <h1 class="text-primary my-md-3">Sign In</h1>
      <div class="form-group">
        <label for="inputUsername">Username</label>
        <input
          type="username"
          class="form-control <%= validationErrors.find(e => e.param === 'username') ? 'border border-danger' : '' %>"
          name="username"
          id="inputUsername"
          placeholder="Username"
          value="<%= prevInputs.username %>"
        />
      </div>
      <div class="form-group">
        <label for="inputPassword4">Password</label>
        <input
          type="password"
          class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'border border-danger' : '' %>"
          name="password"
          id="inputPassword4"
          placeholder="Password"
          value="<%= prevInputs.password %>"
        />
      </div>
    </div>
    <div class="d-flex justify-content-between align-items-center m-md-3">
      <div class="mb-3">
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck" />
            <label class="form-check-label" for="gridCheck">
              Remember My Password
            </label>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
      </div>
      <div>
        <div class="form-group">
          <a href="#" class="btn"
            ><i class="fab fa-google"></i> Sign In With Google</a
          >
        </div>
        <div class="form-group">
          <a href="#" class="btn"
            ><i class="fab fa-facebook"></i> Sign In With Google</a
          >
        </div>
      </div>
    </div>
  </form>
</div>

<%- include ./includes/footer %>
