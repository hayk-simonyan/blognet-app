<%- include ./includes/header %>

<div class="m-3 m-md-5">
  <form action="/register" method="POST" novalidate>
    <div class="m-md-3">
      <h1 class="text-dark my-md-3">Sign Up</h1>
      <div class="form-group">
        <label for="inputUsername">Username</label>
        <input
          class="form-control <%= validationErrors.find(e => e.param === 'username') ? 'border border-danger' : '' %>"
          type="text"
          name="username"
          id="inputUsername"
          placeholder="Username"
          value="<%= prevInputs.username %>"
        />
      </div>
      <div class="form-group">
        <label for="inputEmail4">Email</label>
        <input
          class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'border border-danger' : '' %>"
          type="text"
          type="email"
          name="email"
          id="inputEmail4"
          placeholder="Email"
          value="<%= prevInputs.email %>"
        />
      </div>
      <div class="form-row" action="/register" method="POST" novalidate>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Password</label>
          <input
            type="password"
            class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'border border-danger' : '' %>"
            type="text"
            name="password"
            id="inputPassword4"
            placeholder="Password"
            value="<%= prevInputs.password %>"
          />
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Confirm password</label>
          <input
            type="password"
            class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'border border-danger' : '' %>"
            type="text"
            name="confirmPassword"
            id="inputPassword4"
            placeholder="Confirm Password"
            value="<%= prevInputs.confirmPassword %>"
          />
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-between align-items-center m-md-3">
      <div class="mb-3">
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck" />
            <label class="form-check-label" for="gridCheck">
              Remember My Password
            </label>
          </div>
        </div>
        <button type="submit" class="btn btn-dark">Sign Up</button>
      </div>
      <div>
        <div class="form-group">
          <a href="#" class="btn"
            ><i class="fab fa-google"></i> Sign Up With Google</a
          >
        </div>
        <div class="form-group">
          <a href="#" class="btn"
            ><i class="fab fa-facebook"></i> Sign Up With Google</a
          >
        </div>
      </div>
    </div>
  </form>
</div>

<%- include ./includes/footer %>
